<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no" />
    <meta name="description" content="" />
    <meta name="author" content="" />
    <title>@ViewBag.Title HMS-Dashboard</title>


    <!-- Core theme CSS (includes Bootstrap)-->
    <link href="~/Areas/Dashboard/Content/css/styles.css" rel="stylesheet" />

    <!-- Core theme JS-->
    @*<script src="//ajax.googleapis.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>*@

    <script src="~/Areas/Dashboard/Content/js/jquery-3.6.0.min.js"></script>
    <script src="~/Areas/Dashboard/Content/js/scripts.js"></script>

    <!-- Bootstrap core JS-->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.1/dist/js/bootstrap.bundle.min.js"></script>

    <!-- Bootstrap icons-->
    <script src='https://kit.fontawesome.com/a076d05399.js' crossorigin='anonymous'></script>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css" crossorigin="anonymous">

    <!-- Favicon-->
    <link rel="icon" type="image/x-icon" href="~/Areas/Dashboard/Content/assets/favicon.ico" />

</head>
<body>
    <div class="d-flex" id="wrapper">
        <!-- Sidebar-->
        <div class="border-end bg-white" id="sidebar-wrapper">
            <div class="sidebar-heading border-bottom bg-light">HMS</div>
            <div class="list-group list-group-flush">
           <a href="@Url.Action("Index", "AccomodationTypes")" class="list-group-item list-group-item-action bg-light">
                    <i class="fas fa-building mr-1"></i> Accomodation Types
                </a>
                <a href="@Url.Action("Index", "AccomodationPackages")" class="list-group-item list-group-item-action bg-light">
                    <i class="fas fa-project-diagram"></i> Accomodation Packages
                </a>
                <a href="@Url.Action("Index", "Accomodations")" class="list-group-item list-group-item-action bg-light">
                    <i class="fas fa-map-pin mr-1"></i> Accomodations
                </a>
                <a href="@Url.Action("Index", "Roles")" class="list-group-item list-group-item-action bg-light">
                    <i class="fas fa-users-cog mr-1"></i> Roles
                </a>
                <a href="@Url.Action("Index", "Users")" class="list-group-item list-group-item-action bg-light">
                    <i class="fas fa-users mr-1"></i> Users
                </a>
  
            </div>
        </div>

        <!-- Page content wrapper-->
        <div id="page-content-wrapper">
            <!-- Top navigation-->
            <nav class="navbar navbar-expand-lg navbar-light bg-light border-bottom">
                <div class="container-fluid">
                    <button class="btn btn-primary" id="sidebarToggle">
                        @*<i class="fa-regular fa-bars"></i>*@
                        <i class="fa fa-list"></i>
                    </button>
                    <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent"
                            aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                        <span class="navbar-toggler-icon"></span>
                    </button>
                    <div class="collapse navbar-collapse" id="navbarSupportedContent">
                        <ul class="navbar-nav ms-auto mt-2 mt-lg-0">
                            <li class="nav-item active"><a class="nav-link" href="#!"><i class="fas fa-sign-in-alt"></i>   Logout </a></li>

                        </ul>
                    </div>
                </div>
            </nav>
            <!-- Page content-->
            <div class="container-fluid">
                @RenderBody()
                <hr />
                <footer>
                    <p>&copy; @DateTime.Now.Year - HMS ASP.NET MVC Application</p>
                </footer>
            </div>
        </div>
    </div>

    @using (Html.BeginForm("LogOff", "Account", FormMethod.Post, new { area = "Dashboard", id = "logoutForm", @class = "navbar-right" }))
    {
        @Html.AntiForgeryToken()

    }

   
</body>
</html>
