@model HMS.Areas.Dashboard.ViewModels.AccomodationTypesListingModel

@{
    ViewBag.Title = "Index";
}

<div class="row">
    <div class="col col-lg-12">
        <br />
        <h2>Accomodation Types</h2>
        <hr />
    </div>
</div>

<div class="row mb-3">
    <div class="col col-lg-12">
        <form>
            <div class="input-group">
                <input type="text" name="searchterm" class="form-control" placeholder="Search." value="@Model.SearchTerm" required>
                <button class="btn btn-outline-primary" type="submit"><i class='fas fa-search m-1'></i>Search</button>
                @*<button class="btn btn-outline-secondary" type="button">Reset</button>*@
                <a class="btn btn-outline-secondary" href="@Url.Action("Index", "AccomodationTypes")"><i class="fas fa-redo-alt m-1"></i> Reset</a>
                <button data-href="@Url.Action("Action", "AccomodationTypes")" class="data-btn btn btn-outline-success" type="button"
                        data-bs-toggle="modal" data-bs-target="#actionModal">
                    Create
                </button>
                @*<button id="createButton" class="btn btn-outline-success" type="button" data-bs-toggle="modal" data-bs-target="#actionModal">Create</button>*@
            </div>
        </form>
    </div>
</div>

<div class="row">
    <div class="col col-lg-12">
        @{ Html.RenderPartial("_Listing", Model); }
    </div>
</div>

<div class="modal fade" id="actionModal" tabindex="-1" role="dialog">
    <div class="modal-dialog" role="document">
    </div>
</div>


<!--Create button script-->

<script>
    $(".data-btn").click(function () {
        $.ajax({
            url: $(this).attr("data-href"),
        })
            .done(function (response) {
                $("#actionModal .modal-dialog").html(response);
            });
    });
</script>